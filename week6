public class App {
    public static void main(String[] args) throws Exception {

        String today = "monday";

        switch (today) {
            case "monday":
                System.out.println("Nag aaral");
                break;
            case "tuesday":
                System.out.println("Nag aaral parin iba lang araw");
                break;
            case "wednesday":
                System.out.println("Nag aaral parin habang nagpapahinga");
                break;
            case "thursday":
                System.out.println("Nag aaral ulit");
                break;
            case "friday":
                System.out.println("Nag aaral");
                break;
            case "Saturday":
                System.out.println("Nag aaral wala lang pasok");
                break;
            case "Sunday":
                System.out.println("Nag aaral habang nagsisimba");
                break;
            default:
            System.out.println("Incorrect Day");
                break;
        }

    }
}
